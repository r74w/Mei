    <% post.parents.each do |p| %>
      <%= link_to "##{p.id}", "#p#{p.id}" %>
    <% end %>
  </p>
  <% end %>
-->

  <% unless post.children.empty? %>
  <p class="reply_list">
  <%=raw post.children.map{|p| link_to("##{p.id}", "#p#{p.id}")}.join(', ') %> replied
  </p>
  <% end %>

  <div class="action_menu"><a class="reply" href="#">Reply</a></div>

</div>
